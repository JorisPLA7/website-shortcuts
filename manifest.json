{
  "manifest_version": 2,
  "name": "Website Shortcuts",
  "version": "2",
  "browser_specific_settings": {
    "gecko": {
      "id": "{d550f93a-3b5d-411d-b86d-b4fe9b0bbb0d}"
    }
  },
  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_title": "Website Shortcuts",
    "default_popup": "popup/popup.html"
  },
  "description": "Ctrl + Space to search. \nPress Ctrl + H to move to home page",
  "icons": {
    "32": "icons/logo.png",
    "64": "icons/logo-64-.png",
    "128": "icons/logo-128-.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "tabs",
    "storage",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "payload.js"
      ]
    }
  ]
}